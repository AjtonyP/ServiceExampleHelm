{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["app", "mongodb", "redis", "nats"],
  "properties": {
    "app": {
      "type": "object",
      "required": ["name", "replicaCount", "image", "service"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 1
        },
        "image": {
          "type": "object",
          "required": ["repository", "tag"],
          "properties": {
            "repository": {
              "type": "string",
              "minLength": 1
            },
            "tag": {
              "type": "string",
              "minLength": 1
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "service": {
          "type": "object",
          "required": ["type", "port"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "nodePort": {
              "type": "integer",
              "minimum": 30000,
              "maximum": 32767
            }
          }
        }
      }
    },
    "mongodb": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "replicaSet": {
          "type": "string"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "maximum": 7
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "storageClass": {
              "type": "string"
            },
            "size": {
              "type": "string",
              "pattern": "^[0-9]+(Gi|Mi|Ti)$"
            }
          }
        }
      }
    },
    "redis": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "storageClass": {
              "type": "string"
            },
            "size": {
              "type": "string",
              "pattern": "^[0-9]+(Gi|Mi|Ti)$"
            }
          }
        }
      }
    },
    "nats": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
        "storageClass": {
          "type": "string"
        }
      }
    }
  }
}
